{
    "Logging": {
        "LogLevel": {
            "Default": "Information",
            "Microsoft": "Warning",
            "Microsoft.Hosting.Lifetime": "Information"
        }
    },
    "AllowedHosts": "*",
    "ConnectionStrings": {
        "DefaultConnection": "Server=KASHISH-LAPTOP\\SQLEXPRESS;Database=GreetingAppDB;Trusted_Connection=True;TrustServerCertificate=True;"
    },

    "NLog": {
        "autoReload": true,
        "internalLogLevel": "Info",
        "internalLogFile": "Logs/internal-nlog.txt",
        "targets": {
            "file": {
                "type": "File",
                "fileName": "Logs/logfile.txt",
                "layout": "${longdate} | ${level} | ${logger} | ${message} ${exception}"
            },
            "console": {
                "type": "Console",
                "layout": "info: ${logger}[${event-context:item=EventId}]\n      ${message}"
            }
        },
        "rules": [
            {
                "logger": "*",
                "minLevel": "Info",
                "writeTo": "file,console"
            }
        ]
    },
    "Jwt": {
        "Key": "SuperStrongRandomSecretKeyThatIsAtLeast32Chars!",
        "Issuer": "yourapp.com",
        "Audience": "yourapp.com",
        "ExpiryInMinutes": 60
    }

}
